<% posts.last(4).each do |post| %>
<div class="col-md-3 card" style="border-radius: 20px;" >

<div class="mt-3 text-center">
  <% if post.post_images.present? %>
  <% post.post_images.last(1).each do |image| %>
    <%= attachment_image_tag image, :image, :fill, 200, 200 %>
  <% end %>
  <% else %>
      <%= image_tag 'no_image.png', size: '200x200' %>
  <% end %>
</div>
<br>
<div class="card-body">
    <h6 class="card-title"><%= post.place.name %></h6>
    <p class="card-text"><%= post.prefecture.prefecture_name %></p>
    <p class="card-text"><%= post.item_genre.name %></p>
    <p class="card-text"><%= post.found_day %></p>
</div>
</div>
<% end %>