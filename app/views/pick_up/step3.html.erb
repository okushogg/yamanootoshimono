<div class="col-md-6 box">
  <% breadcrumb :step3, @place  %>
  <%= breadcrumbs separator: " > " , class: :logo %>
</div>

<div class="container">
	<div class="row text-center">
	
		<div class="col-md-12">
			<div class="box" style="color: #fff;">
				<h2><%= @place.name %>で</h2>
				<h4>あなたの拾ったものを以下のジャンルの中から選んでください</h4>
				<%= link_to '戻る', :back,  class:"fas fa-undo tn btn-light"%>
			</div>
		</div>
		
		<!--アイテムジャンル一覧ページ-->
		<div class="col-md-12">
				<div class="box">
							<% @item_genres.each do |item_genre| %>
								<div class="col-md-3 card text-center" style="border-radius: 20px; border:solid 2px #333; display: inline-block;">
								<h6 class="card-title" style="font-size: 20px;"><%= item_genre.name %></h6>
									<!--Seedにあるオリジナルの場合はもともとあった画像を使う。-->
									<% if item_genre.is_original? %>
  										<%= link_to step4_path(item_genre.id) do %>
  											<!--アイテムジャンルの画像が用意できるまでNoImageを使う-->
  									    <%#= image_tag "item_genres/item_genre#{item_genre.id}.png", :size =>'150x150' %>
  									    <%= image_tag "no_image.png", :size =>'150x150' %>
  									  <% end %>
  								<!--追加されたジャンルの場合はアップされた画像を利用する-->
									<% else %>
    									<%= link_to step4_path(item_genre_id: item_genre.id, place_id:  @place.id) do %>
    										<%= attachment_image_tag item_genre, :genre_image, format: 'png', size:"150x150", fallback: "no_image.png" %>
    									<% end %>
									<% end %>
								</div>
							<% end %>
				</div>
			</div>
			<!--アイテムジャンル一覧ページ-->
			
	</div>
</div>