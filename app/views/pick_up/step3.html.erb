<div class="container">
	<div class="row text-center">
	
		<div class="col-md-12">
			<div class="box">
				<h2><%= @place.name %>で</h2>
				<h4>あなたの拾ったものを以下のジャンルの中から選んでください</h4>
			</div>
		</div>
		
		<div class="col-md-12">
				<div class="box">
			  	 
							<% @item_genres.each do |item_genre| %>
								<div class="col-md-3 card text-center" style="border-radius: 20px; border:solid 2px #333;display: inline-block;">
								<h6 class="card-title" style="font-size: 20px;"><%= item_genre.name %></h6>
									<%= link_to step4_path(item_genre_id: item_genre.id, place_id:  @place.id)  do %>
										<%= attachment_image_tag item_genre, :genre_image, format: 'png', size:"150x150", fallback: "no_image.png" %>
									<% end %>
								</div>
							<% end %>
				</div>
			</div>
			
	</div>
</div>